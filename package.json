{
  "name": "encrypt0r",
  "productName": "encrypt0r",
  "version": "1.0.0",
  "description": "A simple way to encrypt and decrypt your files",
  "main": "main.js",
  "scripts": {
    "build-mac": "./node_modules/.bin/electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/encrypt0r.icns --prune=true --out=release-builds",
    "build-win": "./node_modules/.bin/electron-packager . --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/icons/win/encrypt0r.ico --prune=true --out=release-builds",
    "build-linux": "./node_modules/.bin/electron-packager . --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/512x512.png --prune=true --out=release-builds",
    "build": "npm run build-mac && npm run build-win && npm run build-linux",
    "dev": "./node_modules/.bin/grunt watch & ./node_modules/.bin/electron .",
    "start": "electron ."
  },
  "repository": "https://github.com/kunalnagar/encrypt0r",
  "keywords": [
    "Electron",
    "encrypt",
    "decrypt",
    "openssl",
    "file",
    "files"
  ],
  "author": "Kunal Nagar <knlnagar@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.0.7",
    "electron-packager": "^13.1.1",
    "grunt": "^1.0.3",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^3.0.2",
    "load-grunt-tasks": "^4.0.0",
    "node-sass": "^4.11.0",
    "time-grunt": "^2.0.0"
  },
  "dependencies": {
    "jquery": "^3.3.1"
  }
}
